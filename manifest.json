{
  "manifest_version": 2,

  "name": "opteamissed",
  "description": "Fix opteamis.com broken UX",
  "version": "1.0.0",

  "browser_action": {},

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.opteamis.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": ["opteamissed.css", "opteamissed.js"],

  "permissions": ["tabs"]
}
